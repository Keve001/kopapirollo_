<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart2"
            android:id="@+id/gep_hp1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart2"
            android:id="@+id/gep_hp2"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart2"
            android:id="@+id/gep_hp3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Ellenfél"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="/Player"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart2"
            android:id="@+id/jatekos_hp1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart2"
            android:id="@+id/jatekos_hp2"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart2"
            android:id="@+id/jatekos_hp3"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Döntetlenek : 0"
        android:id="@+id/dontetlen"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:id="@+id/alap"
        android:src="@drawable/scissors"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Az ellenfé választása"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:id="@+id/sajat"
        android:src="@drawable/rock"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Válassz ki egyet:"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/rock"
            android:id="@+id/ko"
            />
        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/paper"
            android:id="@+id/papir"
            />
        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/scissors"
            android:id="@+id/ollo"

            />
    </LinearLayout >
</LinearLayout>
